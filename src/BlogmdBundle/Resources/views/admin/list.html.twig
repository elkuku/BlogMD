{% extends '@App/base.html.twig' %}

{% block body %}

    <table class="table table-condensed table-striped table-bordered table-hover">
        <tr>
            <th>Date</th>
            <th>Title</th>
            <th>Slug</th>
            <th>Action</th>
        </tr>
        {% for post in posts %}
            <tr>
                <td>{{ post.publishedAt.format('Y-m-d') }}</td>
                <td>
                    <a href="{{ path('blog-item', {'id': post.id}) }}">{{ post.title }}</a>
                </td>
                <td>{{ post.slug }}</td>
                <td>
                    <a href="{{ path('blog-edit', {'id': post.id}) }}">Edit</a>
                </td>
            </tr>
            {% else %}
            <li>The blog is empty :(</li>
        {% endfor %}
    </table>

{% endblock %}
